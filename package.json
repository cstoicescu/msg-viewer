{
  "name": "msg-opener",
  "version": "1.0.0",
  "description": "Open .msg files on macOS",
  "author": "Catalin Stoicescu",
  "license": "MIT",
  "scripts": {
    "build": "pkg . --output msgviewer-linux && pkg . -t node14-win-x64 -o msgviewer-win.exe && pkg . -t node14-macos-x64 -o msgviewer-macos"
  },

  "bin": {
    "msg-opener": "./openmsg.js"
  },
  "pkg": {
    "scripts": "openmsg.js",
    "assets": [
      "page.html"
    ]
  },
  "dependencies": {
    "@kenjiuno/msgreader": "1.19.0-alpha.1"
  }
}
